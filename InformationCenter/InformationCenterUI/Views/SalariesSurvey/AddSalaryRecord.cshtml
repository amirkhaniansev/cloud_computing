@model SalaryRecord


<form asp-action="Add" asp-controller="SalariesSurvey" method="post">
    <div class=" form-group">
        <label asp-for='@Model.Company'></label>
        <input class="form-control" asp-for='@Model.Company' />
    </div>
    <div class=" form-group">
        <label asp-for='@Model.Position'></label>
        <input class="form-control" asp-for='@Model.Position' />
    </div>
    <div class=" form-group">
        <label asp-for='@Model.Salary'></label>
        <input class="form-control" asp-for='@Model.Salary' />
    </div>
    <div class=" form-group">
        <label asp-for='@Model.Experience'></label>
        <input class="form-control" asp-for='@Model.Experience' />
    </div>
    <button class="btn btn-success" type="submit">Post salary</button>

</form>
