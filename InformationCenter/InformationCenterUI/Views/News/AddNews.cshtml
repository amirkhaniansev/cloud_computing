@model News

<form asp-action="Add" asp-controller="News" method="post">
    <div class=" form-group">
        <label asp-for='@Model.Title'></label>
        <input class="form-control" asp-for='@Model.Title' />
    </div>
    <div class=" form-group">
        <label asp-for='@Model.Author'></label>
        <input class="form-control" asp-for='@Model.Author' />
    </div>
    <div class=" form-group">
        <label asp-for='@Model.Category'></label>
        <input class="form-control" asp-for='@Model.Category' />
    </div>
    <div class=" form-group">
        <label asp-for='@Model.Content'></label>
        <input class="form-control" asp-for='@Model.Content' />
    </div>
    <button class="btn btn-success" type="submit">Submit</button>
</form>
