@model IEnumerable<News>

@if (@Model.Count() == 0)
{
    <label>Nothing interesting happened today! Have fun^^</label> }
else
{
    @foreach (var item in @Model)
    {
        var parms = new Dictionary<string, string> { { "id", item.Id.ToString() } };
        <div class="row">
            <div class="col">@item.Title</div>
            <div class="col">@item.Author</div>
            <a class="btn btn-primary" asp-action="GetNews" asp-controller="News" asp-all-route-data="parms">View</a>
        </div>
}}


